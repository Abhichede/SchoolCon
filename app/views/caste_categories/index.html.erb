<%- model_class = CasteCategory -%>
<h3 class="page-header">
  <%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
</h3>
<div class="row">
  <div class="col-md-2">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= link_to t('.new', :default => t("helpers.links.new")),
                    new_caste_category_path,
                    :class => 'custom-link btn btn-primary', remote: true %>
      </div>
    </div>
  </div>
  <div class="col-md-10">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped">
          <thead>
            <tr>
              <th><%= model_class.human_attribute_name(:id) %></th>
              <th><%= model_class.human_attribute_name(:category) %></th>
              <th><%=t '.actions', :default => t("helpers.actions") %></th>
            </tr>
          </thead>
          <tbody>
            <% @caste_categories.each do |caste_category| %>
              <tr>
                <td><%= caste_category.id %></td>
                <td><%= caste_category.category %></td>
                <td>
                  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                              edit_caste_category_path(caste_category), :class => 'btn btn-default btn-xs', remote: true %>
                  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                              caste_category_path(caste_category),
                              :method => :delete,
                              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                              :class => 'btn btn-xs btn-danger' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>