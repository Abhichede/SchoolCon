<%- model_class = TotalMark -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:exam_term_id) %></th>
      <th><%= model_class.human_attribute_name(:exam_id) %></th>
      <th><%= model_class.human_attribute_name(:written_marks) %></th>
      <th><%= model_class.human_attribute_name(:assessment_marks) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @total_marks.each do |total_mark| %>
      <tr>
        <td><%= link_to total_mark.id, total_mark_path(total_mark) %></td>
        <td><%= total_mark.exam_term_id %></td>
        <td><%= total_mark.exam_id %></td>
        <td><%= total_mark.written_marks %></td>
        <td><%= total_mark.assessment_marks %></td>
        <td><%=l total_mark.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      total_mark_path(total_mark), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_total_mark_path(total_mark), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      total_mark_path(total_mark),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_total_mark_path,
            :class => 'btn btn-primary' %>
