<%= form_for @school_info, :html => { :class => "form-horizontal school_info" } do |f| %>

  <% if @school_info.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@school_info.errors.count, "error") %> prohibited this school_info from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @school_info.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :address, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :address, :class => 'form-control', rows: 5 %>
    </div>
    <%=f.error_span(:address) %>
  </div>
  <div class="form-group">
    <%= f.label :contact, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :contact, :class => 'form-control' %>
    </div>
    <%=f.error_span(:contact) %>
  </div>
  <div class="form-group">
    <%= f.label :registration_no, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :registration_no, :class => 'form-control' %>
    </div>
    <%=f.error_span(:registration_no) %>
  </div>
  <div class="form-group">
    <%= f.label :gst_no, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :gst_no, :class => 'form-control' %>
    </div>
    <%=f.error_span(:gst_no) %>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%=f.error_span(:email) %>
  </div>
  <div class="form-group">
    <%= f.label :code, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :code, :class => 'form-control' %>
      <p class="text-muted">This code will be used to prepend PRN numbers of students.</p>
    </div>
    <%=f.error_span(:code) %>
  </div>
  <div class="form-group">
    <%= f.label :logo, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :logo, :class => 'form-control', value: @school_info.logo %>
    </div>
    <%=f.error_span(:logo) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                school_infos_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
