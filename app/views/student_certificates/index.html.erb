<%- model_class = StudentCertificate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:student_id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:path) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @student_certificates.each do |student_certificate| %>
      <tr>
        <td><%= link_to student_certificate.id, student_certificate_path(student_certificate) %></td>
        <td><%= student_certificate.student_id %></td>
        <td><%= student_certificate.name %></td>
        <td><%= student_certificate.path %></td>
        <td><%=l student_certificate.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      student_certificate_path(student_certificate), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_student_certificate_path(student_certificate), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      student_certificate_path(student_certificate),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_student_certificate_path,
            :class => 'btn btn-primary' %>
