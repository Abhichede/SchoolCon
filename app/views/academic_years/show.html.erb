<%- model_class = AcademicYear -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:academic_year) %>:</strong></dt>
  <dd><%= @academic_year.academic_year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_date) %>:</strong></dt>
  <dd><%= @academic_year.start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_date) %>:</strong></dt>
  <dd><%= @academic_year.end_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:current_year) %>:</strong></dt>
  <dd><%= @academic_year.current_year %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              academic_years_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_academic_year_path(@academic_year), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              academic_year_path(@academic_year),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
