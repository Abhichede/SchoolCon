<%- model_class = AcademicYear -%>
<div class="page-header">
  <h1>
    <%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
    <span class="pull-right">
      <%= link_to t('.new', :default => t("helpers.links.new")),
                  new_academic_year_path,
                  :class => 'btn btn-primary', remote: true %>
    </span>
  </h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:start_month) %></th>
      <th><%= model_class.human_attribute_name(:start_year) %></th>
      <th><%= model_class.human_attribute_name(:end_month) %></th>
      <th><%= model_class.human_attribute_name(:end_year) %></th>
      <th><%= model_class.human_attribute_name(:is_active) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @academic_years.each do |academic_year| %>
      <tr>
        <td><%= academic_year.id %></td>
        <td><%= academic_year.start_month %></td>
        <td><%= academic_year.start_year %></td>
        <td><%= academic_year.end_month %></td>
        <td><%= academic_year.end_year %></td>
        <td><%= academic_year.is_active %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_academic_year_path(academic_year), :class => 'btn btn-default btn-xs', remote: true %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      academic_year_path(academic_year),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


