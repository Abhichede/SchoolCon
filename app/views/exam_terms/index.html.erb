<%- model_class = ExamTerm -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:term_name) %></th>
      <th><%= model_class.human_attribute_name(:start_date) %></th>
      <th><%= model_class.human_attribute_name(:end_date) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @exam_terms.each do |exam_term| %>
      <tr>
        <td><%= link_to exam_term.id, exam_term_path(exam_term) %></td>
        <td><%= exam_term.term_name %></td>
        <td><%= exam_term.start_date %></td>
        <td><%= exam_term.end_date %></td>
        <td><%=l exam_term.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      exam_term_path(exam_term), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_exam_term_path(exam_term), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      exam_term_path(exam_term),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_exam_term_path,
            :class => 'btn btn-primary' %>
