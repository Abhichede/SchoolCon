<%- model_class = QuestionPaper -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:subject_id) %>:</strong></dt>
  <dd><%= @question_paper.subject_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @question_paper.name %></dd>
</dl>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Question</th>
      <th>Marks</th>
    </tr>
  </thead>
  <tbody>
    <% @question_paper.questions.each do |question| %>
      <tr>
        <td><%= question.question %></td>
        <td><%= question.marks %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.back', :default => t("helpers.links.back")),
              question_papers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_question_paper_path(@question_paper), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              question_paper_path(@question_paper),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
