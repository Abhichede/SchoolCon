<%- model_class = Teacher -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="row">
  <div class="col-lg-2">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= link_to t('.back', :default => t("helpers.links.back")),
                    teachers_path, :class => 'custom-link btn btn-default'  %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_teacher_path(@teacher), :class => 'custom-link btn btn-primary' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    teacher_path(@teacher),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'custom-link btn btn-danger' %>
      </div>
    </div>
  </div>
  <div class="col-lg-10">
    <div class="panel panel-default">
      <div class="panel-body">
        <dl class="dl-horizontal">
          <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
          <dd><%= @teacher.first_name %> <%= @teacher.middle_name %> <%= @teacher.last_name %></dd>

          <dt><strong><%= model_class.human_attribute_name(:date_of_birth) %>:</strong></dt>
          <dd>
            <%= @teacher.dob %>
          </dd>

          <dt><strong><%= model_class.human_attribute_name(:gender) %>:</strong></dt>
          <dd>
            <%= @teacher.gender %>
          </dd>

          <dt><strong><%= model_class.human_attribute_name(:blood_group) %>:</strong></dt>
          <dd>
            <%= @teacher.blood_group %>
          </dd>


          <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
          <dd>
            <%= @teacher.address_one %> <%= @teacher.address_two %> <br/>
            <%= @teacher.city %> <%= @teacher.state %> <br/>
            <%= @teacher.country %> <%= @teacher.pincode %>
          </dd>

          <dt><strong><%= model_class.human_attribute_name(:contact) %>:</strong></dt>
          <dd>
            <%= @teacher.contact %>
          </dd>

          <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
          <dd>
            <%= @teacher.email %>
          </dd>

          <dt><strong><%= model_class.human_attribute_name(:subjects) %>:</strong></dt>
          <% @teacher.subjects.each do |subject| %>
              <dd><%= subject.name %></dd>
          <% end %>
        </dl>
      </div>
    </div>
  </div>
</div>