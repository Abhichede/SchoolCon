<%= form_for @teacher, :html => { :class => "form-horizontal teacher" } do |f| %>

  <% if @teacher.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@teacher.errors.count, "error") %> prohibited this teacher from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @teacher.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :address, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :address, :class => 'form-control' %>
    </div>
    <%=f.error_span(:address) %>
  </div>
  <div class="form-group">
    <%= f.label :contact, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :contact, :class => 'form-control' %>
    </div>
    <%=f.error_span(:contact) %>
  </div>
  <div class="form-group">
    <%= f.label :subjects, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_check_boxes(:subject_ids, @subjects, :id, :name) do |b|
        b.label(:"data-value" => b.value, class: 'checkbox-inline') { b.check_box + b.text }
      end

      %>
    </div>
    <%=f.error_span(:subject_id) %>
  </div>
  <div class="form-group">
    <%= f.label :standards, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_check_boxes(:standard_ids, @standards, :id, :name ) do |b|
        b.label(:"data-value" => b.value, class: 'checkbox-inline') { b.check_box + b.text }
      end
      %>
    </div>
    <%=f.error_span(:standard_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                teachers_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
