<div class="row" style="background-color: #FFFFFF !important; height: 100%">
  <div class="col-lg-4 col-md-4">
    <%= image_tag 'cartoon-boy-going-to-school.jpg', style: 'width: 100%; height: 100%', class: 'hide-on-mobile' %>
  </div>
  <div class="col-lg-4 col-md-4">
    <div class="owl">
      <div class="hand"></div>
      <div class="hand hand-r"></div>
      <div class="arms">
        <div class="arm"></div>
        <div class="arm arm-r"></div>
      </div>
    </div>
    <div class="panel panel-info devise-bs">
      <div class="panel-heading">
        <h4><%= t('.sign_in', default: 'Sign in') %></h4>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form' }) do |f| %>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
            </div>
            <% if devise_mapping.rememberable? %>
                <div class="checkbox">
                  <%= f.label :remember_me do %>
                      <%= f.check_box :remember_me %> <%= t('.remember_me', default: 'Remember me') %>
                  <% end %>
                </div>
            <% end %>
            <%= f.submit  t('.sign_in', default: 'Sign in'), class: 'btn btn-primary' %>
        <% end %>
      </div>
      <div class="panel-footer">
        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
  <div class="col-lg-4 col-md-4">
    <%= image_tag 'cartoon-kid-with-mobile-phone-Stock-Photo.jpg', style: 'width: 25%; height: 25%', class: 'hide-on-mobile' %>
    <%= image_tag 'kid-with-school-bag.jpg', style: 'width: 100%; height: 100%', class: 'hide-on-mobile' %>
  </div>
</div>