<%= bootstrap_devise_error_messages! %>
<div>
  <div class="col-lg-4 col-md-4">
    <%= image_tag 'cute-school-children-vector.svg', style: 'width: 100%; height: 20%', class: 'hide-on-mobile' %>
  </div>
  <div class="col-lg-4 col-md-4">
    <div class="owl">
      <div class="hand"></div>
      <div class="hand hand-r"></div>
      <div class="arms">
        <div class="arm"></div>
        <div class="arm arm-r"></div>
      </div>
    </div>
    <div class="panel panel-danger devise-bs">
      <div class="panel-heading">
        <h4><%= t('.sign_up', default: 'Sign up') %></h4>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>

            <% for role in User::ROLES %>
                <%= check_box_tag "user[roles][#{role}]", role, @user.roles.include?(role), {:name => "user[roles][]"}%>
                <%= label_tag "user_roles_#{role}", role.to_s.humanize %><br />
            <% end %>
            <%= hidden_field_tag "user[roles][]", "" %>

            <%= f.submit t('.sign_up', default: 'Sign up'), class: 'btn btn-primary' %>
        <% end %>
      </div>
      <div class="panel-footer">
        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
  <div class="col-lg-4 col-md-4">
    <%= image_tag 'school-girl-msg.svg', style: 'width: 100%; height: 100%', class: 'hide-on-mobile' %>
  </div>
</div>