<%- model_class = Post -%>
<div class="well">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              posts_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_post_path(@post), :class => 'btn btn-success' %>
  <%= link_to 'New Attachment', new_post_attachment_path(post_id: @post.id), remote: true, :class => 'btn btn-primary' %>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="x_panel">
      <div class="x_title">
        <h2><%= @post.title %></h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
          <li><a class="close-link"><i class="fa fa-close"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <div class="well">
          <p><%= @post.description %></p>
        </div>

        <% @post_attachments.each do |p| %>
          <div class="">
            <div class="col-md-55">
              <div class="thumbnail" style="height: auto !important;">
                <div class="image view view-first">
                  <img style="width: 100%; display: block;" src="<%= p.attachment_path %>" alt="image"/>
                  <div class="mask">
                    <div class="tools tools-bottom">
                      <a href="<%= p.attachment_path %> "><i class="fa fa-link"></i></a>
                      <a href="<%= edit_post_attachment_path(p, post_id: @post.id) %>" data-remote="true"><i class="fa fa-pencil"></i></a>
                      <%= link_to '<i class="fa fa-trash"></i>'.html_safe, p, method: :delete, data: { confirm: 'Are you sure?' } %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
          </div>
      </div>
    </div>
  </div>
</div>




