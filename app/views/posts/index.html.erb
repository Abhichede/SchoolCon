<%- model_class = Post -%>
<div class="well">
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_post_path,
              :class => 'btn btn-primary' %>
</div>
<div class="row">
  <div class="x_panel">
    <div class="x_title">
      <h2><i class="fa fa-list-alt"></i> Posts / News</h2>
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </li>
        <li><a class="close-link"><i class="fa fa-close"></i></a>
        </li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <table class="table table-striped" id="posts_table">
        <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:id) %></th>
          <th><%= model_class.human_attribute_name(:title) %></th>
          <th><%= model_class.human_attribute_name(:description) %></th>
          <th><%= model_class.human_attribute_name(:created_at) %></th>
          <th><%= t '.actions', :default => t("helpers.actions") %></th>
        </tr>
        </thead>
        <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= link_to post.id, post_path(post) %></td>
            <td><%= post.title %></td>
            <td><%= truncate post.description, length: 50 %></td>
            <td><%= post.created_at_local %></td>
            <td>
              <%= link_to t('.show', :default => t("helpers.links.show")),
                          post_path(post), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_post_path(post), :class => 'btn btn-success btn-xs' %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="clearfix"></div>


<script type="text/javascript" charset="utf-8">
    $(function () {
        $('#posts_table').dataTable({
            "order": [[ 0, "desc" ]]
        });
    });
</script>
