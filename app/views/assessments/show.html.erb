<%- model_class = Assessment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:assessment_type) %>:</strong></dt>
  <dd><%= @assessment.assessment_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:standard_id) %>:</strong></dt>
  <dd><%= @assessment.standard_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:division_id) %>:</strong></dt>
  <dd><%= @assessment.division_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:integer) %>:</strong></dt>
  <dd><%= @assessment.integer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:assessment_name) %>:</strong></dt>
  <dd><%= @assessment.assessment_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:max_marks) %>:</strong></dt>
  <dd><%= @assessment.max_marks %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              assessments_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_assessment_path(@assessment), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              assessment_path(@assessment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
