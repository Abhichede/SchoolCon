<p id="notice"><%= notice %></p>

<h1>Parent Messages</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Teacher</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parent_messages.each do |parent_message| %>
      <tr>
        <td><%= parent_message.student_id %></td>
        <td><%= parent_message.teacher_id %></td>
        <td><%= parent_message.message %></td>
        <td><%= link_to 'Show', parent_message %></td>
        <td><%= link_to 'Edit', edit_parent_message_path(parent_message) %></td>
        <td><%= link_to 'Destroy', parent_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Parent Message', new_parent_message_path %>
