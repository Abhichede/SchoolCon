<% add_breadcrumb 'Assign Subject', new_assign_subject_path %>

<%= form_tag assign_subjects_path, :method => :post, :class => "form-horizontal subjects"  do  %>



    <div class="form-group">
      <%= label_tag :standard_id, nil, :class => 'control-label required col-lg-2' %>
      <div class="col-lg-4">
        <%= select_tag :standard_id, options_for_select(Standard.all.map {|standard| [standard.name, standard.id]}),
                     class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag(:subjects, nil, :class => 'control-label col-lg-2') %>
      <div class="col-lg-10">
        <%= select_tag :subject_ids, options_for_select(Subject.all.map {|subject| [subject.name, subject.id]}),
                     class: 'multiselect', multiple: true %>
      </div>
    </div>


    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= submit_tag nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    subjects_path, :class => 'btn btn-default' %>
      </div>
    </div>

<% end %>
