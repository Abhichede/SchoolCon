<%- model_class = Standard -%>
<div class="page-header">
  <h1>
    <%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
    <span class="pull-right">
      <%= link_to t('.new', :default => t("helpers.links.new")),
                  new_standard_path,
                  :class => 'btn btn-primary' %>
    </span>
  </h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:no_of_divisions) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @standards.each do |standard| %>
      <tr>
        <td><%= link_to standard.id, standard_path(standard) %></td>
        <td><%= standard.name %></td>
        <td><%= standard.no_of_divisions %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      standard_path(standard), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_standard_path(standard), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      standard_path(standard),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

