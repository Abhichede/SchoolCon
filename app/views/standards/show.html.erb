<%- model_class = Standard -%>
<div class="page-header">
  <h1>
    <%=t '.title', :default => @standard.name.titleize + ' Standard' %>
    <span class="pull-right">
      <%= link_to t('.back', :default => t("helpers.links.back")),
                  standards_path, :class => 'btn btn-default'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_standard_path(@standard), :class => 'btn btn-default' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  standard_path(@standard),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
    </span>
  </h1>
</div>

<%
  no_of_divisions = @standard.no_of_divisions.to_i
  letter = '@'
%>

<% while no_of_divisions != 0 %>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <%= letter.next.titleize %>
    </div>
    <div class="panel-body">
      <table class="table table-stripped">
        <thead>
          <tr>
            <th colspan="1"></th>
            <th>Monday</th>
            <th>Tuesday</th>
            <th>Wednesday</th>
            <th>Thursday</th>
            <th>Friday</th>
            <th>Saturday</th>
            <th>Sunday</th>
          </tr>
        </thead>
        <tbody>

        </tbody>
      </table>
    </div>
  </div>

  <%
    letter = letter.next
    no_of_divisions = no_of_divisions - 1
  %>
<% end %>

