<%- model_class = LeaveApplication -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:subject) %>:</strong></dt>
  <dd><%= @leave_application.subject %></dd>
  <dt><strong><%= model_class.human_attribute_name(:message) %>:</strong></dt>
  <dd><%= @leave_application.message %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_approved) %>:</strong></dt>
  <dd><%= @leave_application.is_approved %></dd>
  <dt><strong><%= model_class.human_attribute_name(:seen_date) %>:</strong></dt>
  <dd><%= @leave_application.seen_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:teacher_id) %>:</strong></dt>
  <dd><%= @leave_application.teacher_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:student_id) %>:</strong></dt>
  <dd><%= @leave_application.student_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              leave_applications_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_leave_application_path(@leave_application), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              leave_application_path(@leave_application),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
