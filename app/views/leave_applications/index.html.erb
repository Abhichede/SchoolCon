<%- model_class = LeaveApplication -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:subject) %></th>
      <th><%= model_class.human_attribute_name(:message) %></th>
      <th><%= model_class.human_attribute_name(:is_approved) %></th>
      <th><%= model_class.human_attribute_name(:seen_date) %></th>
      <th><%= model_class.human_attribute_name(:teacher_id) %></th>
      <th><%= model_class.human_attribute_name(:student_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @leave_applications.each do |leave_application| %>
      <tr>
        <td><%= link_to leave_application.id, leave_application_path(leave_application) %></td>
        <td><%= leave_application.subject %></td>
        <td><%= leave_application.message %></td>
        <td><%= leave_application.is_approved %></td>
        <td><%= leave_application.seen_date %></td>
        <td><%= leave_application.teacher_id %></td>
        <td><%= leave_application.student_id %></td>
        <td><%=l leave_application.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      leave_application_path(leave_application), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_leave_application_path(leave_application), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      leave_application_path(leave_application),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_leave_application_path,
            :class => 'btn btn-primary' %>
