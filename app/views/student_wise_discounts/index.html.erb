<%- model_class = StudentWiseDiscount -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:student_id) %></th>
      <th><%= model_class.human_attribute_name(:academic_year_id) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:amount) %></th>
      <th><%= model_class.human_attribute_name(:is_payment_done) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @student_wise_discounts.each do |student_wise_discount| %>
      <tr>
        <td><%= link_to student_wise_discount.id, student_wise_discount_path(student_wise_discount) %></td>
        <td><%= student_wise_discount.student_id %></td>
        <td><%= student_wise_discount.academic_year_id %></td>
        <td><%= student_wise_discount.description %></td>
        <td><%= student_wise_discount.amount %></td>
        <td><%= student_wise_discount.is_payment_done %></td>
        <td><%=l student_wise_discount.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      student_wise_discount_path(student_wise_discount), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_student_wise_discount_path(student_wise_discount), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      student_wise_discount_path(student_wise_discount),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_student_wise_discount_path,
            :class => 'btn btn-primary' %>
