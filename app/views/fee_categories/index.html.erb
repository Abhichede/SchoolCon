<%- model_class = FeeCategory -%>
<div class="row">
  <div class="col-md-2">
    <div class="panel panel default">
      <div class="panel-body">
        <%= link_to t('.new', :default => t("helpers.links.new")),
                    new_fee_category_path,
                    :class => 'custom-link btn btn-primary', remote: true %>
      </div>
    </div>
  </div>
  <div class="col-md-10">
    <div class="panel panel default">
      <div class="panel-body">
        <table class="table table-striped">
          <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:id) %></th>
            <th><%= model_class.human_attribute_name(:name) %></th>
            <th><%= model_class.human_attribute_name(:standard_id) %></th>
            <th><%= model_class.human_attribute_name(:amount) %></th>
            <th><%= model_class.human_attribute_name(:created_at) %></th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
          </thead>
          <tbody>
          <% @fee_categories.each do |fee_category| %>
              <tr>
                <td><%= fee_category.id %></td>
                <td><%= fee_category.name %></td>
                <td><%= fee_category.standard.name %></td>
                <td><%= fee_category.amount %></td>
                <td><%=l fee_category.created_at %></td>
                <td>
                  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                              edit_fee_category_path(fee_category), :class => 'btn btn-default btn-xs', remote: true %>
                  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                              fee_category_path(fee_category),
                              :method => :delete,
                              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                              :class => 'btn btn-xs btn-danger' %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>