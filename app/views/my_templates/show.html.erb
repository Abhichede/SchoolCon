<%- model_class = MyTemplate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @my_template.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:desc) %>:</strong></dt>
  <dd><%= @my_template.desc.html_safe %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              my_templates_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_my_template_path(@my_template), :class => 'btn btn-default', remote: true %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              my_template_path(@my_template),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
