<% add_breadcrumb @my_template.name, my_template_path(@my_template) %>
<%- model_class = MyTemplate -%>

<div class="row">
  <div class="col-lg-3 col-md-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= link_to t('.back', :default => t("helpers.links.back")),
                    my_templates_path, :class => 'btn btn-default custom-link'  %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_my_template_path(@my_template), :class => 'btn btn-default custom-link', remote: true %>
        <% link_to t('.destroy', :default => t("helpers.links.destroy")),
                    my_template_path(@my_template),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger custom-link' %>
      </div>
    </div>
  </div>
  <div class="col-lg-9 col-md-9">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="panel panel-default">
          <div class="panel-body">
            <%= @my_template.desc.html_safe %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
