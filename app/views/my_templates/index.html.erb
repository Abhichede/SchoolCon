<%- model_class = MyTemplate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @my_templates.each do |my_template| %>
      <tr>
        <td><%= link_to my_template.id, my_template_path(my_template) %></td>
        <td><%= my_template.name %></td>
        <td><%=l my_template.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      my_template_path(my_template), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_my_template_path(my_template), :class => 'btn btn-default btn-xs', remote: true %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      my_template_path(my_template),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_my_template_path,
            :class => 'btn btn-primary', remote: true %>
