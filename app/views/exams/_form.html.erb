<%= form_for @exam, :html => { :class => "form-horizontal exam" } do |f| %>

  <% if @exam.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@exam.errors.count, "error") %> prohibited this exam from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @exam.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :exam_term_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :exam_term_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:exam_term_id) %>
  </div>
  <div class="form-group">
    <%= f.label :exam_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :exam_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:exam_name) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                exams_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
