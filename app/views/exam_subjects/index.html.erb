<%- model_class = ExamSubject -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:subject_id) %></th>
      <th><%= model_class.human_attribute_name(:exam_id) %></th>
      <th><%= model_class.human_attribute_name(:max_marks) %></th>
      <th><%= model_class.human_attribute_name(:pass_marks) %></th>
      <th><%= model_class.human_attribute_name(:written_marks) %></th>
      <th><%= model_class.human_attribute_name(:assessment_marks) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @exam_subjects.each do |exam_subject| %>
      <tr>
        <td><%= link_to exam_subject.id, exam_subject_path(exam_subject) %></td>
        <td><%= exam_subject.subject_id %></td>
        <td><%= exam_subject.exam_id %></td>
        <td><%= exam_subject.max_marks %></td>
        <td><%= exam_subject.pass_marks %></td>
        <td><%= exam_subject.written_marks %></td>
        <td><%= exam_subject.assessment_marks %></td>
        <td><%=l exam_subject.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      exam_subject_path(exam_subject), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_exam_subject_path(exam_subject), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      exam_subject_path(exam_subject),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_exam_subject_path,
            :class => 'btn btn-primary' %>
