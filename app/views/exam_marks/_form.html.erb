<%= form_for @exam_mark, :html => { :class => "form-horizontal exam_mark" } do |f| %>

  <% if @exam_mark.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@exam_mark.errors.count, "error") %> prohibited this exam_mark from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @exam_mark.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :student_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :student_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:student_id) %>
  </div>
  <div class="form-group">
    <%= f.label :exam_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :exam_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:exam_id) %>
  </div>
  <div class="form-group">
    <%= f.label :exam_subject_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :exam_subject_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:exam_subject_id) %>
  </div>
  <div class="form-group">
    <%= f.label :written_marks, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :written_marks, :class => 'form-control' %>
    </div>
    <%=f.error_span(:written_marks) %>
  </div>
  <div class="form-group">
    <%= f.label :assessment_marks, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :assessment_marks, :class => 'form-control' %>
    </div>
    <%=f.error_span(:assessment_marks) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                exam_marks_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
