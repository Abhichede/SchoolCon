<%- model_class = ExamMark -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:student_id) %>:</strong></dt>
  <dd><%= @exam_mark.student_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:exam_id) %>:</strong></dt>
  <dd><%= @exam_mark.exam_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:exam_subject_id) %>:</strong></dt>
  <dd><%= @exam_mark.exam_subject_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:written_marks) %>:</strong></dt>
  <dd><%= @exam_mark.written_marks %></dd>
  <dt><strong><%= model_class.human_attribute_name(:assessment_marks) %>:</strong></dt>
  <dd><%= @exam_mark.assessment_marks %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              exam_marks_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_exam_mark_path(@exam_mark), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              exam_mark_path(@exam_mark),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
