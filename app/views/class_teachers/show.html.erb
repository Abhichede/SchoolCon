<%- model_class = ClassTeacher -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:division_id) %>:</strong></dt>
  <dd><%= @class_teacher.division_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:teacher_id) %>:</strong></dt>
  <dd><%= @class_teacher.teacher_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:standard_id) %>:</strong></dt>
  <dd><%= @class_teacher.standard_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              class_teachers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_class_teacher_path(@class_teacher), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              class_teacher_path(@class_teacher),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
